<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="vpnClientApp.Views.ServerSelectView">
    <StackPanel Margin="0" Spacing="10" HorizontalAlignment="Center" Width="400">
        <TextBlock Text="Server" FontWeight="Bold" HorizontalAlignment="Center"/>
        <ComboBox x:Name="ServerCombo" MinWidth="300" HorizontalAlignment="Center"/>
        <TextBlock Text="User name" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBox x:Name="UserNameBox" Watermark="User name" HorizontalAlignment="Center" Width="300"/>
        <TextBlock Text="Password" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBox x:Name="PasswordBox" Watermark="Password" PasswordChar="*" HorizontalAlignment="Center" Width="300"/>
        <Button x:Name="ConnectButton" Content="Connect" Height="35" Background="#4CAF50" Foreground="White" Width="300" HorizontalAlignment="Center"/>
        <TextBlock x:Name="StatusBlock" Text="Disconnected" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        <TextBox x:Name="LogBox" IsReadOnly="True" Height="80" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" Width="380" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl> 